<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<% if @book.errors.any? %>
 "error"
<P><%= flash.now[:alert] %></P>
<% end %>
<h1>Editing Book</h1>
 <%= form_with model: @book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>